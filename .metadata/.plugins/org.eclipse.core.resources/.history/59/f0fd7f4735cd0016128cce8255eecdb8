package wordone;

import org.apache.hadoop.mapreduce.Mapper;

import wordoccur.Pair;

import org.apache.hadoop.io.LongWritable;
import org.apache.hadoop.io.Text;

import java.util.LinkedList;
import java.util.List;
import java.util.StringTokenizer;

import org.apache.hadoop.io.IntWritable;


public class MapPair extends Mapper<LongWritable,Text,Pair,LongWritable> {

	private static final IntWritable one = new IntWritable(1);
	
	private Pair pair = new Pair();
	
	private Text first = new Text();
	
	private Text second = new Text();
	
	private String pattern = "^[a-z][a-z0-9]*$";
	
	private List<String> words = new LinkedList();
	
	public void map(LongWritable key,Text value,Context context) {
		
		String testWord = context.getConfiguration().get("target1");
		
		//Taking one line at a time
		String line = value.toString();
		
		//takenizing the line
		StringTokenizer tokenizer = new StringTokenizer(line);
		
		String currentWord;
		
		while(tokenizer.hasMoreTokens()){
			currentWord = tokenizer.nextToken().toLowerCase();
			if (currentWord.matches(pattern)){
				words.add(currentWord);
			}
		}
		
		for (int i=0;i<words.size()-1;i++){
			Pair temp = new Pair(first.set(words.get(i)),second.set(words.get(i+1)));
			//context.write(temp,one);
		}
		
		
		
		
	}
	
}

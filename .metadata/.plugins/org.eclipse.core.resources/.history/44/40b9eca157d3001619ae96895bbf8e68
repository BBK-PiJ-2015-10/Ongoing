package recursion;

public class IsEven {

	public static void main(String[] args) {
		
		IsEven is = new IsEven();
		System.out.println(is.isEven(10));

	}
	
	private boolean isEven(int n){
		if (n==0) return true;
		else return isOdd(n-1);
	}
	
	private boolean isOdd(int n){
		return(!isEven(n));
	}

}

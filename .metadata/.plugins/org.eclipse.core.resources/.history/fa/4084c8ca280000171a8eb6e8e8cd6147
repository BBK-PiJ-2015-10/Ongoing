package delivery;

public class PrioNode implements Comparable {
	
	private Node node;
	
	private Double priority;
	
	public PrioNode(Node node,  Double priority) {
		this.node = node;
		this.priority = priority;
	}
	
	public PrioNode(Node node) {
		this.node = node;
	}

	public Node getNode() {
		return node;
	}

	public void setNode(Node node) {
		this.node = node;
	}

	public Number getPriority() {
		return priority;
	}

	public void setPriority(Double priority) {
		this.priority = priority;
	}
	
	@Override
	public int hashCode(){
		return this.node.hashCode();
	}
	
	@Override
	public boolean equals(Object input){
		if (input==this){
			return true;
		}
		if (!(input instanceof PrioNode)){
			return false;
		}
		PrioNode otherNode = ( (PrioNode) input);
		return otherNode.node.equals(this.node);
	}

	@Override
	public int compareTo(Object arg0) {
		PrioNode other = ((PrioNode) arg0);
		if(this.priority==other.priority){
			return 0;
		}
		//if (this.priority<other.priority){
			//return -1;
		//}
		
		//return this.priority.compareTo(other.priority);
	}
	
	
	
	

}

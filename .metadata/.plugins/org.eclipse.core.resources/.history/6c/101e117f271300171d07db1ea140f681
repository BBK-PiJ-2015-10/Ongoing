package multithreading

object Multithreading {
  
  def main(args: Array[String]): Unit = {
    
    
    
    //Use case illustrating the use of join
    var cnt=0
    val threads = for (i <-1 to 10) yield {
      new Thread(new Runnable {
        def run {
          for (j <-1 to 100000000) synchronized {
            cnt +=1
          }
        }
      })
    }
    threads.foreach(_.start())
    println(cnt)
    threads.foreach(_.join)
    println(cnt)
    
    //Very simple use case
    /*
    new Thread(new Runnable {
      def run {
        for (i <- 1 to 15) {
          println(i)
          Thread.sleep(200)
        }
      }
    }).start
    
    for (c <- 'A' to 'Z'){
      println(c)
      Thread.sleep(100)
    }
   
  */
    
  }
  
  
  
}
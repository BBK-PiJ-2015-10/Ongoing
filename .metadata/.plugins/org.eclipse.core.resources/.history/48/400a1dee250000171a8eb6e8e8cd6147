package delivery;

public class EncapPerson implements Comparable {
	
	private Person person;
	
	private Integer priority;
	
	EncapPerson(Person person,Integer priority){
		this.person=person;
		this.priority=priority;
	}

	public Person getPerson() {
		return person;
	}

	public void setPerson(Person person) {
		this.person = person;
	}

	public Integer getPriority() {
		return priority;
	}

	public void setPriority(Integer priority) {
		this.priority = priority;
	}
	
	@Override
	public int hashCode(){
		return this.person.hashCode();
	}
	
	@Override
	public boolean equals(Object input){
		if (input==this){
			return true;
		}
		if (!(input instanceof EncapPerson)){
			return false;
		}
		EncapPerson otherNode = ( (EncapPerson) input);
		return otherNode.person.equals(this.person);
	}

	@Override
	public int compareTo(Object arg0) {
		EncapPerson other = ((EncapPerson) arg0);
		return this.priority.compareTo(other.priority);
	}
	
	
	

	
	


}

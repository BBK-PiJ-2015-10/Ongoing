		String line ="Yasser Alejandro Alberto Palacios Otero";
		
		StringTokenizer token = new StringTokenizer(line);
		
		List<String> mynames = new LinkedList();
		
		while(token.hasMoreTokens()){
			mynames.add(token.nextToken());
		}
		
		for (int i=0;i<mynames.size()-1;i++){
			System.out.println(mynames.get(i)+" amico de "+mynames.get(i+1));
			//first.set(words.get(i));
			//second.set(words.get(i+1));
			//pair.set(first,second);
			//context.write(pair,one);
		}
		
		/*
		

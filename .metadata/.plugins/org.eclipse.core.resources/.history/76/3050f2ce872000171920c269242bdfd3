package com.plantplaces.dto;

import org.hibernate.Session;
import org.hibernate.SessionFactory;
import org.hibernate.cfg.Configuration;

import java.util.Date;

public class ScriptDriver {

	
	
	public static void main(String[] args) {
		
		
		Plant plant1 = new Plant();
		plant1.setCommon("testt7");
		plant1.setCultivar("biruta");
		plant1.setGenus("help");
		plant1.setSpecies("now");
		plant1.setName("work please7");
		
		
		SessionFactory sessionFactory = new Configuration().configure().buildSessionFactory();
		
		//When session is open, a database connection is open
		Session session = sessionFactory.openSession();
		//Begin Transaction is needed, since we are doing a CUD operation
		session.beginTransaction();
		
		session.save(plant1);
		
		session.getTransaction().commit();
		session.close();
		sessionFactory.close();
		
		
		

	}
	
	

}

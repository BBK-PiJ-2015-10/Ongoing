package com.datax.play.spark

import org.apache.spark.SparkConf;
import org.apache.spark.SparkContext

object counter {
  
  def main (args: Array[String]): Unit = {
    
    println("Hello back Scala")
    
    val conf = new SparkConf().setAppName("counter").setMaster("local[*]")
    
    val sc= new SparkContext(conf)
    
    //val text = sc.textFile("cities.txt")
    
    //val address = "C:\\Users\\YasserAlejandro\\mp\\mtp-abm\\"
    val address = "/input/tonto.txt";	
    
    val text = sc.textFile("address")
    
    
    
    text.flatMap{line=>line.split(" ")}
    .map{word=>(word,1)}
    .reduceByKey(_+_).saveAsTextFile("cities.output.txt")
    
    
    
  }
  
}
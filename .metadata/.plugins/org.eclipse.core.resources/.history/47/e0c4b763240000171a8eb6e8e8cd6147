package delivery;

import java.util.PriorityQueue;

public class ScriptTestPerson {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		ScriptTestPerson tr = new ScriptTestPerson();
		tr.run();

	}
	
	
	private PriorityQueue<PriorPerson> personq = new PriorityQueue();
	
	
	public void run(){
		
		PriorPerson one = new Person("Ale",100);
		PriorPerson two = new Person("Tontolone",50);
		PriorPerson three = new Person("Mamamia",200);
		
		personq.add(one);
		personq.add(two);
		personq.add(three);
		
		System.out.println(personq.peek().getName());
		
		personq.remove(two);
		
		two.setPriority(150);
		
		personq.add(two);
		
		
		
		System.out.println(personq.poll().getName());
		System.out.println(personq.poll().getName());
		
		
		//one.setPriority
		
		
	}

}

package delivery;

import java.util.PriorityQueue;

import java.util.Set;
import java.util.HashSet;

public class ScriptTestPerson {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		ScriptTestPerson tr = new ScriptTestPerson();
		tr.run();

	}
	
	
	private PriorityQueue<EncapPerson> personq = new PriorityQueue();
	
	private Set<Person> people = new HashSet();
	
	private 
	
	
	public void run(){
		
		Person one = new Person("Ale");
		Person two = new Person("Tontolone");
		Person three = new Person("Mamamia");
		
		people.add(one);
		people.add(two);
		people.add(three);
		
		people.forEach((n)->(personq.add(new EncapPerson(n,100))));
		
		
		EncapPerson
		//one.
		
		personq.add(one);
		personq.add(two);
		personq.add(three);
		
		System.out.println(personq.peek().getName());
		
		personq.remove(two);
		
		two.setPriority(150);
		
		personq.add(two);
		
		
		
		System.out.println(personq.poll().getName());
		System.out.println(personq.poll().getName());
		
		
		//one.setPriority
		
		
	}

}
